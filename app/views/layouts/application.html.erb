<%= javascript_include_tag "event_form", "data-turbo-track": "reload" %>

<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Event Sc" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

<% if logged_in? %>
  <body>
  <nav class="bg-gray-50 dark:bg-gray-900 p-3 border-b">
    <div class="flex items-center justify-between">
      <!-- Left empty space for balance -->
      <div class="w-24">
        <% if Rails.env.development? %>
          <span class="text-xs text-yellow-600 font-semibold">DEV</span>
        <% end %>
      </div>
      
      <!-- Centered navigation links -->
      <div class="flex gap-4 items-center justify-center">
        <a href="<%= students_path %>" class="hover:text-gray-600">All Students</a>
        <a href="<%= advisors_path %>" class="hover:text-gray-600">Advisors</a>
        <a href="<%= events_path %>" class="hover:text-gray-600">Events</a>
        <% if admin_user? %>
          <a href="<%= users_path %>" class="hover:text-gray-600 text-blue-600 font-semibold">Users</a>
        <% end %>
      </div>
      
      <!-- Right-aligned logout button -->
      <div class="w-24 flex justify-end">
        <%= button_to "Logout", login_path, method: :delete, class: "px-2 py-1 bg-red-300 hover:bg-red-400 text-white rounded" %>
      </div>
    </div>
  </nav>
<% else %>
  <body>
  <% if Rails.env.development? %>
  <nav class="bg-yellow-50 dark:bg-yellow-900 p-2 border-b border-yellow-200">
    <div class="flex items-center justify-between text-sm">
      <span class="text-yellow-800 font-semibold">DEVELOPMENT MODE</span>
      <div class="flex gap-2">
        <%= link_to "Quick Login (dev)", dev_login_login_path, 
            class: "px-2 py-1 bg-yellow-500 hover:bg-yellow-600 text-white rounded text-xs" %>
        <%= link_to "Quick Login (admin)", dev_login_login_path(email: 'admin@shepherdscollege.edu'), 
            class: "px-2 py-1 bg-yellow-500 hover:bg-yellow-600 text-white rounded text-xs" %>
      </div>
    </div>
  </nav>
  <% end %>
<% end %>

    <div class="container mx-auto px-4">
      <%= yield %>
    </div>

    <div id="modal" data-controller="modal"></div>
  </body>
</html>
